{
  "permissions": {
    "allow": [
      "Bash(make create-driver:*)",
      "Bash(make:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check --fix --unsafe-fixes --fix-only"
          }
        ]
      }
    ]
  }
}